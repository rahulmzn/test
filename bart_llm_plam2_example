import requests

# Replace with actual Palm2 API details
base_url = "https://api.palm2.example.com"  # Replace with actual API base URL
endpoint = "/generate"  # Replace with the appropriate endpoint for text generation
api_key = "YOUR_API_KEY"  # Replace with your API key

# User and system prompts
user_prompt = "What is the meaning of life?"
system_prompt = "Answer the question thoughtfully, incorporating relevant information and evidence."

# Construct the request payload
data = {
    "user_prompt": user_prompt,
    "system_prompt": system_prompt
}

# Make the API request
headers = {
    "Authorization": f"Bearer {api_key}",
    "Content-Type": "application/json"
}
response = requests.post(f"{base_url}{endpoint}", headers=headers, json=data)

# Handle the response
if response.status_code == 200:
    response_json = response.json()
    generated_text = response_json["text"]
    print(generated_text)
else:
    print("API request failed with status code:", response.status_code)
    print("Response body:", response.text)
